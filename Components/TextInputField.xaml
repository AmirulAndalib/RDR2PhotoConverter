<UserControl x:Class="RDR2PhotoConverter.Components.TextInputField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RDR2PhotoConverter.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Border with rounded corners -->
        <Border x:Name="border" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
            <!-- TextBox for input -->
            <TextBox x:Name="textBox" Background="Transparent" BorderThickness="0" Padding="5"
                     Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                     Foreground="#333333" FontSize="14" FontFamily="Segoe UI"
                     VerticalContentAlignment="Center" />
        </Border>
        <!-- Placeholder text -->
        <TextBlock x:Name="placeholder" Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="#999999" Margin="7,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
