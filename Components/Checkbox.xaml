<UserControl x:Class="RDR2PhotoConverter.Components.Checkbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RDR2PhotoConverter.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <CheckBox x:Name="CheckboxComponent" VerticalAlignment="Center" IsChecked="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
        <TextBlock x:Name="Label" Text="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                   VerticalAlignment="Center" Margin="5,0,0,0" />
    </StackPanel>
</UserControl>
