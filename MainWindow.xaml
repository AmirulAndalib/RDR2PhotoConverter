<Window x:Class="RDR2PhotoConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RDR2PhotoConverter"
        mc:Ignorable="d"
        Title="RDR2 Photo Converter"
        Height="450"
        Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10">
        <Border.Background>
            <ImageBrush ImageSource="./background.jpg" />
        </Border.Background>
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition  Height="30" />
            </Grid.RowDefinitions>
            <Grid Margin="20 5" Grid.Row="0" MouseLeftButtonDown="OnTitleBarDrag">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="25" x:Name="titleBar" FontWeight="Medium" VerticalAlignment="Center" Height="40" />
                <Button
                    Width="40"
                    Height="40"
                    Grid.Column="1"
                    Click="OnCloseClick"
                    Background="Transparent"
                    BorderThickness="0" 
                    Cursor="Hand"
                >
                    <Image Source="./cross-icon.png" Height="35" />
                </Button>
            </Grid>
            <Frame x:Name="parentContainer" Grid.Row="1"/>
            <Border CornerRadius="0, 0, 10, 10" Background="Black" Grid.Row="2" Padding="10, 0, 5, 2">
                <Grid Margin="0,0,-5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="Status:"
                        Foreground="#F0D20C"
                        FontSize="14"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        x:Name="statusBarTextBlock" Margin="0,0,10,0" Height="18"
                    />
                    <StackPanel Orientation="Horizontal" Margin="0,0,5,0" Grid.Column="1">
                        <Button
                            Width="30"
                            Height="30"
                            Grid.Column="1"
                            Click="OnMyBlueskyClick"
                            Background="Transparent"
                            BorderThickness="0" 
                            Cursor="Hand"
                            Margin="0, 0, 2, 0"
                        >
                            <Image Source="bluesky.png" />
                        </Button>
                        <Button
                            Width="30"
                            Height="30"
                            Grid.Column="1"
                            Click="OnMyTwitterClick"
                            Background="Transparent"
                            BorderThickness="0" 
                            Cursor="Hand"
                            Margin="0, 0, 2, 0"
                        >
                            <Image Source="twitterx.png" />
                        </Button>
                        <Button
                            Width="30"
                            Height="30"
                            Grid.Column="1"
                            Click="OnMyGithubClick"
                            Background="Transparent"
                            BorderThickness="0" 
                            Cursor="Hand"
                        >
                            <Image Source="github.png" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
